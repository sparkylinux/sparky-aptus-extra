	if [ "$SPARKYVERCHECK4" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="mystiq"
     ;;
  ogmrip)
