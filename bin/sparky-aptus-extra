		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="motionbox"
     ;;
  mplayer)
	PACKAGE="mplayer"
     ;;
  mpv)
	PACKAGE="mpv"
     ;;
  parole)
	PACKAGE="parole"
     ;;
  qtav-players)
	PACKAGE="qtav-players"
     ;;
  rage)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="rage"
     ;;
  smplayer)
	PACKAGE="smplayer"
     ;;
  smtube)
	PACKAGE="smtube"
     ;;
  stremio)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="stremio"
     ;;
  totem)
	PACKAGE="totem"
     ;;
  vlc)
	PACKAGE="vlc"
     ;;
  xine-ui)
	PACKAGE="xine-ui"
     ;;
#####video tools####################################################
  acidrip)
	PACKAGE="acidrip"
     ;;
  avidemux)
	PACKAGE="avidemux"
     ;;
  brasero)
	PACKAGE="brasero"
     ;;
  clipgrab)
	if [ "$ARCHARM" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	if [ "$SPARKYVERCHECK4" != "" ] || [ "$SPARKYVERCHECK5" != "" ]; then
		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
	fi
	PACKAGE="clipgrab"
     ;;
  devede)
	PACKAGE="devede"
     ;;
  dvd95)
	PACKAGE="dvd95"
     ;;
  flowblade)
	PACKAGE="flowblade"
     ;;
  gnome-subtitles)
	PACKAGE="gnome-subtitles"
     ;;
  gtk-recordmydesktop)
	PACKAGE="gtk-recordmydesktop"
     ;;
  k3b)
	PACKAGE="k3b"
     ;;
  kdenlive)
	PACKAGE="kdenlive"
     ;;
  lives)
	PACKAGE="lives"
     ;;
  mystiq)
	if [ "$ARCH64" = "" ]; then
		$DIALOG $TEXT"\n$LOCAL110\n\n$LOCAL90" $TITLE"$TITLETEXT" $MSGBOX
		exit 1
